{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"lib": [
			"es6"
		],
		"sourceMap": false,
		"rootDir": "../src",
		"strict": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": false,
		"typeRoots": [
			"node_modules/@types",
			"src/typeing"
		]
	},
	"include": [
		"../src/extension/**/*.ts"
	],
	"exclude": [
		"**/node_modules/**"
	]
}
